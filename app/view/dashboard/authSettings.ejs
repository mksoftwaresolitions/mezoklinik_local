<!-- Breadcrumb-->
<div class="breadcrumb-holder">
    <div class="container-fluid">
      <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
        <li class="breadcrumb-item active">Şifre Ayarları</li>
      </ul>
    </div>
  </div>
  <section class="forms">
    <div class="container-fluid">
      <!-- Page Header-->
      <header> 
        <h1 class="h3 display">Şifre Ayarları</h1>
      </header>
  
      <% if (status == "no") { %>
      <% } else if (status == "ok") { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Bilgile güncellendi.</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% } else { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%- status %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% } %>
  
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-header d-flex align-items-center">
              <h4>Yönetici Bilgileri</h4>
            </div>
            <div class="card-body">

              <form class="form-horizontal" action="/dashboard/ayarlar" method="POST">
                
                <div class="form-group row">
                  <label class="col-sm-2 form-control-label">Kullanıcı Adı</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="loginUsername" name="loginUsername" value="<%= user %>" required>
                  </div>
                </div>
                <div class="line"></div>
                
                <div class="form-group row">
                  <label class="col-sm-2 form-control-label">Şifre</label>
                  <div class="col-sm-10">
                    <input type="password" class="form-control" id="loginPassword" name="loginPassword" required>
                  </div>
                </div>
                <div class="line"></div>
                  
                <div class="form-group row">
                  <div class="col-sm-4 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                  </div>
                </div>
              </form>

            </div>
          </div>
        </div>
  
      </div>
    </div>
  </section>

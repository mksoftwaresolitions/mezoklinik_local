<!-- Breadcrumb-->
<div class="breadcrumb-holder">
  <div class="container-fluid">
    <ul class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
      <li class="breadcrumb-item active">Bildirimler</li>
    </ul>
  </div>
</div>
<section>
  <div class="container-fluid">
    <!-- Page Header-->
    <header> 
      <h1 class="h3 display">Bildirim Listesi</h1>
    </header>
    
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-header">
            <h4>Sistemde kayıtlı bildirim listesi</h4>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Kime</th>
                    <!-- th>İşlemler</th -->
                  </tr>
                </thead>
                <tbody>
                <% i = 0; %>
                <% notificationList.forEach(ntf => { %>
                <% i++; %>
                  <tr>
                    <th scope="row"><%= i %></th>
                    <td><%= ntf.title %></td>
                    <td><%= ntf.description %></td>
                    <td><% if(ntf.topic == "all") { %>Herkese<% } else if(ntf.topic == "doctor") { %>Doktorlara<% } %></td>
                    <!-- td><a href="./bildirimDuzenle/<%= ntf.uid %>" class="btn btn-sm btn-info">Düzenle</a></td -->
                  </tr>
                <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
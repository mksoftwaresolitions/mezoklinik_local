<!-- Breadcrumb-->
<div class="breadcrumb-holder">
  <div class="container-fluid">
    <ul class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
      <li class="breadcrumb-item active">Faydalı Bağlantılar</li>
    </ul>
  </div>
</div>
<section>
  <div class="container-fluid">
    <!-- Page Header-->
    <header> 
      <h1 class="h3 display">Faydalı Bağlantı Listesi</h1>
    </header>
    
    <div class="row">
      <div class="col-lg-12">

        <div class="card">
          <div class="card-header">
            <h4>Sistemde kayıtlı faydalı bağlantı listesi</h4>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>Açıklama</th>
                    <th>Bağlantı</th>
                    <th>İşlemler</th>
                  </tr>
                </thead>
                <tbody>
                <% i = 0; %>
                <% helpfulLinkList.forEach(hLink => { %>
                <% i++; %>
                  <tr>
                    <th scope="row"><%= i %></th>
                    <td><%= hLink.title %></td>
                    <td><%= hLink.description %></td>
                    <td><%= hLink.url %></td>
                    <td style="min-width: 150px">
                      <a href="/dashboard/faydaliLinkDuzenle/<%= hLink.uid %>" class="btn btn-sm btn-info">Düzenle</a>&nbsp;&nbsp;
                      <button type="button" class="btn btn-sm btn-danger" onclick="delBtn('<%= hLink.uid %>', '<%= i %>')">Sil</button>
                    </td>
                  </tr>
                <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>


        <!-- Button to Open the Modal -->
        <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#emptyFolderModal" id="efModalBtn" hidden></button>

        <!-- The Modal for empty folder -->
        <div class="modal fade" id="emptyFolderModal">
          <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
            
              <!-- Modal Header -->
              <div class="modal-header">
                <h4 class="modal-title">Dikkat!</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>
              
              <!-- Modal body -->
              <div class="modal-body">
                Bu bağlantı silinecek.
                <br><br>Silinsin mi?
              </div>
              
              <!-- Modal footer -->
              <div class="modal-footer" id="efModalFooter">
                <a href="#" class="btn btn-danger" >Evet</a>
                
                <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
              <!-- 
              -->
              </div>
              
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>


<script>
  function delBtn(pcUid, tableRowIndex){
    document.getElementById("efModalFooter").innerHTML = "<a href=\"/dashboard/faydaliLinkSil/"+pcUid+"\" class=\"btn btn-danger\" >Evet</a>"+
                      "<button type=\"button\" class=\"btn btn-secondary\" data-dismiss=\"modal\" id=\"efCancelBtn\">İptal</button>";
    document.getElementById("efModalBtn").click();
  }
</script>
<!-- Breadcrumb-->
<div class="breadcrumb-holder">
    <div class="container-fluid">
      <ul class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
        <li class="breadcrumb-item active">Marka İşlemleri</li>
      </ul>
    </div>
  </div>
  <section class="forms">
    <div class="container-fluid">
      <!-- Page Header-->
      <header> 
        <h1 class="h3 display">Marka İşlemleri</h1>
      </header>
  
      <% if (status == "no") { %>
      <% } else if (status == "ok") { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <strong>Marka kayıt edildi.</strong>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% } else { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%- status %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% } %>
  
      <div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-header d-flex align-items-center">
              <h4>Marka Ekle</h4>
            </div>
            <div class="card-body">

              <form class="form-horizontal" action="/dashboard/markaEkle" method="POST">
                <div class="form-group row">
                  <label class="col-sm-2 form-control-label">Marka Adı</label>
                  <div class="col-sm-10">
                    <input type="text" class="form-control" id="brandName" name="brandName" required>
                  </div>
                </div>
                <div class="line"></div>
                  
                <div class="form-group row">
                  <div class="col-sm-4 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                  </div>
                </div>
              </form>
              
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Marka</th>
                      <th>İşlemler</th>
                    </tr>
                  </thead>
                  <tbody>
                  <% i = 0; %>
                  <% brands.forEach(brand => { %>
                  <% i++; %>
                    <tr>
                      <th scope="row"><%= i %></th>
                      <td class="col-sm-10"><%= brand.brandName %></td>
                      <td class="col-sm-2" style="min-width: 150px">
                        <a href="javascript:;" onclick="delBtn('<%= brand.uid %>', '<%= i %>')" class="btn btn-sm btn-danger">Sil</a>
                      </td>
                    </tr>
                  <% }); %>
                  </tbody>
                </table>
              </div>

              
              <!-- Button to Open the Modal -->
              <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#emptyFolderModal" id="efModalBtn" hidden></button>

              <!-- The Modal for empty folder -->
              <div class="modal fade" id="emptyFolderModal">
                <div class="modal-dialog modal-dialog-centered">
                  <div class="modal-content">
                  
                    <!-- Modal Header -->
                    <div class="modal-header">
                      <h4 class="modal-title">Dikkat!</h4>
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    
                    <!-- Modal body -->
                    <div class="modal-body">
                      Bu marka silinecek.
                      <br><br>Silinsin mi?
                    </div>
                    
                    <!-- Modal footer -->
                    <div class="modal-footer" id="efModalFooter">
                      <a href="#" class="btn btn-danger" >Evet</a>
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <!-- 
                    -->
                    </div>
                    
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
  
      </div>
    </div>
  </section>

  <script>
    function delBtn(pcUid, tableRowIndex){
      document.getElementById("efModalFooter").innerHTML = "<a href=\"/dashboard/markaSil/"+pcUid+"\" class=\"btn btn-danger\" >Evet</a>"+
                        "<button type=\"button\" class=\"btn btn-secondary\" data-dismiss=\"modal\" id=\"efCancelBtn\">İptal</button>";
      document.getElementById("efModalBtn").click();
    }
  </script>